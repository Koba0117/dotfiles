# theme
include ./dark

# browser
browser "firefox %u"

# auto-reload
auto-reload yes

# vim keybind
unbind-key h
unbind-key j
unbind-key k
unbind-key l

bind-key h quit
bind-key j down
bind-key k up
bind-key l open

macro p set browser "mpv --player-operation-mode=pseudo-gui -- %u &"; one; set browser firefox
